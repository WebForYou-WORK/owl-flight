@model Domain.Entityes.Slider
@{
    ViewBag.Title = "Додати слайд";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddSlider", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("SlidePhoto", "new")
    <div class="form-horizontal">
        <table class="table">
            <tr>
                <td>
                    <h4 align="center">Основні параметри</h4>
                </td>
                <td>
                    <h4 align="center">Фото</h4>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", style = "margin-left: 20px;margin-right: 20px;", placeholder = "Назва слайду" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control", style = "margin-left: 20px;margin-right: 20px;", placeholder = "Номер слайду" } })
                            @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SlideDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SlideDescription, new { htmlAttributes = new { @class = "form-control", style = "height: 60px; margin-left: 20px; margin-right: 20px;", placeholder = "Опис слайду" } })
                            @Html.ValidationMessageFor(model => model.SlideDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10" style="background-color: azure">
                            <h4>
                                оберіть <strong>фото</strong> слайду
                            </h4>
                            <input type="file" name="upload" dirname="Обрати фото" velue="Обрати фото" />
                        </div>
                    </div>
                </td>
            </tr>
        </table>
        <div class="col-md-offset-2 col-md-10">
            <h4 align="center" style="color: red">@Html.ValidationSummary(true, "", new { @class = "text-danger" })</h4>
            <table>
                <a href="/Admin/SliderResult">
                    <input id="Button" type="button" value="Повернутись назад" class="btn btn-default" style="float: right" />
                </a>

            </table><input type="submit" value="Створити слайд" class="btn btn-default" style="float: left" />
        </div>
    </div>
}

