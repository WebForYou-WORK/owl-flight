@model Domain.Entityes.Slider

@if (Model.SlidePhoto != "new")
{
    <h4 align="center" style="color:  red">@ViewBag.Error</h4>
    <table class="table">
        <tr>
            <td>
                <img src="~/PhotoForDB/@Model.SlidePhoto" width="60" height="70" />
            </td>
            <td class="text-center">
                <input type="button" id="@(Model.SlideId + "Delete")"
                       class="btn btn-default btn-xs"
                       value="Видалити фото" />
                <script>
                    $(document)
                        .ready(function () {
                            $("#@(Model.SlideId + "Delete")")
                                .click(function () {
                                    var data = {
                                        idSlide: ('@Model.SlideId')
                                    };
                                    $.ajax({
                                        url: "/Admin/DeleteSlidePhoto",
                                        type: "POST",
                                        data: data,
                                        success: function (data) {
                                            $("#slidePhotoPartial").html(data);
                                        }
                                    });
                                });
                        });
                </script>
            </td>
        </tr>
    </table>
}




