@model Domain.Entityes.Product

<div class="modal-dialog" style="border: 5px gray solid; border-radius: 5px;">
    <div class="modal-content">
        <div class="row">
            <div class="col-xs-10 col-sm-11 col-md-11 col-lg-11">
                <h2 style="text-shadow: 0px 0px 0px black, 2px 2px 0.09em slategray;">"@Model.Name"</h2>
            </div>
            <div class="col-xs-2 col-sm-1 col-md-1 col-lg-1">
                <button type="button" class="close" data-dismiss="modal"><img src="~/img/close.png" /></button>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7">
                <img src="~/PhotoForDB/@Model.Photo" title="@("футболка - " + Model.Name)" alt="@("футболка - " + Model.Name)" style="width: 100%; height: auto;">
            </div>
            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5" >
                
                <div align="center" style="border: 1px rgba(128, 128, 128, 0.46) solid; margin-left: 2px; border-radius: 5px; width: 98%">
                    <h3 align="left" style="padding-left: 5px;">
                        Ціна - <strong style="color: firebrick"> @Model.Price грн</strong>
                    </h3><br><br>

                    @if (Model.Composition != null)
                    {
                        <h5 align="left" style="padding-top: 15px; padding-left: 5px"><strong>Склад:</strong> @Model.Composition</h5>
                    }
                    @if (Model.Density != null)
                    {
                        <h5 align="left" style="padding-top: 15px ; padding-left: 5px"><strong>Щільність:</strong> @Model.Density</h5>
                    }
                    @if (Model.Producer != null)
                    {
                        <h5 align="left" style="padding-top: 15px; padding-left: 5px"><strong>Країна-виробник:</strong> @Model.Producer</h5>
                    }
                    @if (Model.Description != null)
                    {
                        <h5 align="left" style="padding-top: 15px; padding-left: 5px"><strong>Опис:</strong> @Model.Description</h5>
                    }
                    @if (Model.Style != null)
                    {
                        <h5 align="left" style="padding-top: 15px; padding-left: 5px"><strong>Стиль:</strong> @Model.Style</h5>
                    }
                </div>
            </div>
           
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <br />
                <br />
                <form id="add" method="post" novalidate="novalidate"></form>
                @using (Html.BeginForm("AddToBasket", "Basket"))
                {
                    @Html.AntiForgeryToken()

                    @Html.LabelFor(model => model.SelectedSize)

                    if (Model.S)
                    {
                        <input name="SelectedSize" id="Radio1" type="radio" value="S" data-val-required="будь ласка, оберіть розмір" data-val="true"><label style="margin: 5px">S</label>
                    }
                    if (Model.M)
                    {
                        <input name="SelectedSize" id="Radio2" type="radio" value="M" data-val-required="будь ласка, оберіть розмір" data-val="true"><label style="margin: 5px">M</label>
                    }
                    if (Model.L)
                    {
                        <input name="SelectedSize" id="Radio3" type="radio" value="L" data-val-required="будь ласка, оберіть розмір" data-val="true"><label style="margin: 5px">L</label>
                    }
                    if (Model.Xl)
                    {
                        <input name="SelectedSize" id="Radio4" type="radio" value="XL" data-val-required="будь ласка, оберіть розмір" data-val="true"><label style="margin: 5px">XL</label>
                    }
                    if (Model.Xxl)
                    {
                        <input name="SelectedSize" id="Radio5" type="radio" value="XXL" data-val-required="будь ласка, оберіть розмір" data-val="true"><label style="margin: 5px">XXL</label>
                    }
                    if (Model.Xl3)
                    {
                        <input name="SelectedSize" id="Radio6" type="radio" value="3XL" data-val-required="будь ласка, оберіть розмір" data-val="true"><label style="margin: 5px">3XL</label>
                    }
                    if (Model.Xl4)
                    {
                        <input name="SelectedSize" id="Radio7" type="radio" value="4XL" data-val-required="будь ласка, оберіть розмір" data-val="true"><label style="margin: 5px">4XL</label>
                    }
                    <p>&nbsp;@Html.ValidationMessageFor(model => model.SelectedSize, "", new { @class = "text-danger" })</p>
                    @Html.HiddenFor(x => x.SelectedSize)
                    @Html.HiddenFor(x => x.ProductId)
                    @Html.Hidden("returnUrl", Request.Url?.PathAndQuery)

                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <button type="submit" name="action" class="button22" value="addAndGo"style="float: left" >Швидкий заказ</button>
                        <button type="submit" name="action" class="button22" value="add" style="float: right">Додати в кошик</button>
                        <br/>
                        <br/>
                    </div>
                }
            </div>
            </div>
    </div>
</div>